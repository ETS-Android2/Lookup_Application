<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="Closet.activity.Closet_MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <com.google.android.material.navigation.NavigationView
        android:layout_height="750dp"
        android:layout_width="wrap_content"
        android:id= "@+id/nav_view"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:text="LookUP"
            android:fontFamily="@font/baloo"
            android:layout_gravity="center"
            android:textColor="@color/black_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
            android:minHeight="?attr/actionBarSize"
            android:theme = "@style/AppTheme.NoActionBar"
            app:navigationIcon="@drawable/menuicon_ivory"/>

        <Button
            android:id="@+id/top_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="172dp"
            android:drawableTop="@drawable/icon_top"
            android:fontFamily="@font/baloo"
            android:text="Top"
            android:textColor="#000000"
            android:textSize="22sp"
            app:backgroundTint="@color/white"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="269dp" />

        <Button
            android:id="@+id/bottom_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="220dp"
            android:drawableTop="@drawable/icon_pants"
            app:backgroundTint="@color/white"
            android:text="Bottom"
            android:fontFamily="@font/baloo"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="353dp"
            tools:layout_editor_absoluteY="269dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/outer_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="12dp"
            android:drawableTop="@drawable/icon_outer"
            android:text="Outer"
            android:fontFamily="@font/baloo"
            android:textSize="22sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/dress_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="144dp"
            android:layout_marginBottom="220dp"
            app:backgroundTint="@color/white"
            android:drawableTop="@drawable/icon_dress"
            android:fontFamily="@font/baloo"
            android:text="Dress"
            android:textSize="22sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/acc_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="465dp"
            app:backgroundTint="@color/white"
            android:drawableTop="@drawable/icon_cap"
            android:text="Accessory"
            android:fontFamily="@font/baloo"
            android:textSize="22sp"
            android:textColor="#000000"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>