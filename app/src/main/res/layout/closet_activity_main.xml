<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="Closet.activity.Closet_MainActivity">

    <Button
        android:id="@+id/top_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="172dp"
        android:drawableTop="@drawable/icon_top"
        android:fontFamily="@font/baloo"
        android:text="Top"
        android:textColor="#000000"
        android:textSize="22sp"
        app:backgroundTint="@color/window_background"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/bottom_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="220dp"
        android:drawableTop="@drawable/icon_pants"
        app:backgroundTint="@color/window_background"
        android:text="Bottom"
        android:fontFamily="@font/baloo"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="353dp"
        tools:layout_editor_absoluteY="269dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/outer_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="12dp"
        android:drawableTop="@drawable/icon_outer"
        android:text="Outer"
        android:fontFamily="@font/baloo"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/dress_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="220dp"
        app:backgroundTint="@color/window_background"
        android:drawableTop="@drawable/icon_dress"
        android:fontFamily="@font/baloo"
        android:text="Dress"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/acc_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="465dp"
        app:backgroundTint="@color/window_background"
        android:drawableTop="@drawable/icon_cap"
        android:text="Accessory"
        android:fontFamily="@font/baloo"
        android:textSize="22sp"
        android:textColor="#000000"/>


</RelativeLayout>