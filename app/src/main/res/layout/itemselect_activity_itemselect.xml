<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:theme="@style/AppTheme.NoActionBar"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="Login_Main.activity.LoginActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >


        <com.google.android.material.navigation.NavigationView
            android:layout_height="750dp"
            android:layout_width="wrap_content"
            android:id= "@+id/nav_view"
            app:headerLayout="@layout/menu_header"
            app:menu="@menu/main_menu"
            android:layout_gravity="start" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/window_background"
                android:fontFamily="@font/baloo"
                android:minHeight="?attr/actionBarSize"
                android:text="LookUP"
                android:textColor="@color/black_de"
                android:theme="@style/AppTheme.NoActionBar"
                app:navigationIcon="@drawable/menuicon_ivory" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select1_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableBottom="@drawable/purpose_daily2"
                        android:text="일상"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select2_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/purpose_hangout2"
                        android:text="친구 모임 / 데이트"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select3_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableBottom="@drawable/purpose_workout2"
                        android:text="운동"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select4_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableBottom="@drawable/purpose_formal2"
                        android:text="직장 / 면접"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select5_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableBottom="@drawable/purpose_parttime2"
                        android:text="아르바이트"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/select6_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableBottom="@drawable/purpose_etc2"
                        android:text="기타"
                        android:textColor="#505050"
                        app:backgroundTint="#45EACD76"
                        app:rippleColor="@color/bg_row_foreground" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>