<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="ImageSelect.ImageSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/select1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일상" />
        <Button
            android:id="@+id/select2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 모임 / 데이트" />
        <Button
            android:id="@+id/select3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동" />
        <Button
            android:id="@+id/select4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직장 / 면접" />
        <Button
            android:id="@+id/select5_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아르바이트" />
        <Button
            android:id="@+id/select6_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아무거나 (?)" />


    </LinearLayout>

</FrameLayout>